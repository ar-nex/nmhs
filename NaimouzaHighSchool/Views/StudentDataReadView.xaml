                            <Label Grid.Row="0" Grid.Column="3" Content="{Binding LastSchool, Source={StaticResource dObj}, Mode=OneWay}" Style="{StaticResource lblValue}" Foreground="{Binding LastSchoolColor, Source={StaticResource dObj}}"></Label>
                            <Label Grid.Row="1" Grid.Column="2" Style="{StaticResource lblProperty}">Date of Leaving</Label>
                            <Label Grid.Row="1" Grid.Column="3" Content="{Binding DateOfLeaving, Source={StaticResource dObj}, Mode=OneWay}" Style="{StaticResource lblValue}" Foreground="{Binding DateOfLeavingColor, Source={StaticResource dObj}}"></Label>
                            <Label Grid.Row="2" Grid.Column="2" Style="{StaticResource lblProperty}">TC</Label>
                            <Label Grid.Row="2" Grid.Column="3" 
