<Window x:Class="NaimouzaHighSchool.Views.StudentDataReadView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dvm="clr-namespace:NaimouzaHighSchool.ViewModels"
        xmlns:conv="clr-namespace:NaimouzaHighSchool.ViewModels.Converters"
        Title="Student Info" Height="576.58" Width="985.874">
    <Window.Resources>
        <dvm:StudentDataReadViewModel x:Key="dObj"></dvm:StudentDataReadViewModel>
        <conv:SearchConverter x:Key="SearchConverter"></conv:SearchConverter>
        <conv:IntConverter x:Key="IntConverter"></conv:IntConverter>
        <conv:GenderFilterConverter x:Key="GenFilterConverter"></conv:GenderFilterConverter>
        <conv:GenderConverter x:Key="GenConverter"></conv:GenderConverter>
        <conv:BoolConverter x:Key="YesNoConverter"></conv:BoolConverter>
        <conv:Bool1Converter x:Key="Bool1Converter"></conv:Bool1Converter>
        <conv:DateConverter x:Key="DateConverter"></conv:DateConverter>
        <conv:DateConverter1 x:Key="DateConverter1"></conv:DateConverter1>
        <Style TargetType="RadioButton">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="20,2,2,2" />
        </Style>
        <Style TargetType="TextBlock" x:Key="headerTextBlock">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Foreground" Value="DarkGreen" />
            <Setter Property="TextDecorations" Value="Underline"/>
        </Style>
        <Style TargetType="Border" x:Key="SearchBorder">
            <Setter Property="Background" Value="#91aa9d"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="RadioButton" x:Key="searchRadio">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="10,2"/>          
        </Style>
        <Style TargetType="RadioButton" x:Key="filterRadio">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#bbb"/>
            <Setter Property="Margin" Value="10,2,2,2"/>
        </Style>
        <Style TargetType="Button" x:Key="searchbarButton">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="groupHeader">
            <Setter Property="Foreground" Value="YellowGreen" />
            <Setter Property="Margin" Value="10,3,3,3"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="TextDecorations" Value="Underline" />
        </Style>
        <Style TargetType="Label" x:Key="lblProperty">
            <Setter Property="Foreground" Value="#ccc"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
        <Style TargetType="Label" x:Key="lblValue">
            <Setter Property="FontSize" Value="13"/>            
        </Style>
        <Style TargetType="Label" x:Key="doubleDot">
            <Setter Property="Foreground" Value="Salmon"/>
        </Style>
        <ControlTemplate x:Key="buttonTemplate" TargetType="{x:Type Button}">
            <Border Name="TemBorder" TextBlock.Foreground="#fb0f4c" CornerRadius="1" Background="Transparent" BorderBrush="#fb0f4c" BorderThickness="2">
                <ContentPresenter Name="buttonConPresenter" HorizontalAlignment="Center" Margin="{TemplateBinding Padding}">

                </ContentPresenter>
                <!--<Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Color="#666"></DropShadowEffect>
                </Border.Effect>-->
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="TemBorder" Property="Background" Value="Yellow" />
                    <Setter TargetName="TemBorder" Property="BorderBrush" Value="Yellow"/>
                    <Setter TargetName="TemBorder" Property="TextBlock.Foreground" Value="Black"/>
                    
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter TargetName="TemBorder" Property="Background" Value="#FFB0B2B2" />
                    <Setter TargetName="TemBorder" Property="TextBlock.Foreground" Value="white"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Window.Resources>
    <DockPanel LastChildFill="True">
        <Border DockPanel.Dock="Bottom" Height="0" Name="EditPanel" Margin="8,0,8,0" BorderBrush="#0c1429" BorderThickness="3,1,3,0" CornerRadius="3,3,0,0" Background="#2a2d34">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Border Padding="5">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Margin="1,0,1,0" Width="80" Command="{Binding SaveEditCommand, Source={StaticResource dObj}}" Template="{StaticResource buttonTemplate}" Cursor="Hand">Save</Button>
                         <Button Content="Exit" Name="HideEdit" Width="80" Margin="1,0,1,0">
                            <Button.Triggers>
                            <EventTrigger RoutedEvent="Button.Click" SourceName="HideEdit">
                                <BeginStoryboard Name="myStoryBoardClose">
                                    <Storyboard>
                                        <DoubleAnimation 
                                              Storyboard.TargetName="EditPanel"
                                              Storyboard.TargetProperty="Height"
                                              To="0" Duration="0:0:0.1" 
                                              />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>
                         </Button>   
                    </StackPanel>                
                </Border>

                <ScrollViewer Grid.Row="1" Background="#eee">
                    <TabControl>
                        <TabItem Header="Class">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid Background="#eee">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Label Margin="1,2,1,1">Name</Label>
                                    <TextBox Grid.Row="0" Grid.Column="1" Margin="1,2,3,1" Text="{Binding TxbName, Source={StaticResource dObj}, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                    <Label Grid.Row="1" Margin="1">Class</Label>
                                    <ComboBox Margin="1" Width="80" HorizontalAlignment="Left" Grid.Row="1" Grid.Column="1" ItemsSource="{Binding SchoolClasses, Source={StaticResource dObj}}"                                             
                                              SelectedItem="{Binding TxbCls, Source={StaticResource dObj}}">
                                    </ComboBox>
                                    <Label Grid.Row="2" Margin="1">Section</Label>
                                    <ComboBox Grid.Row="2" Grid.Column="1" Margin="1" Width="80" HorizontalAlignment="Left" ItemsSource="{Binding SchoolSections, Source={StaticResource dObj}}" SelectedItem="{Binding TxbSection, Source={StaticResource dObj}}"></ComboBox>
                                    <Label Grid.Row="3" Margin="1">Roll</Label>
                                    <TextBox Grid.Row="3" Grid.Column="1" Margin="1" Width="80" HorizontalAlignment="Left" Text="{Binding TxbRoll, Source={StaticResource dObj}, Converter={StaticResource IntConverter}, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                </Grid>
                                <Grid Grid.Column="1" Background="#eee">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Label Margin="3,2,1,1">Stream</Label>
                                    <ComboBox Grid.Column="1" Margin="1,2,1,1" ItemsSource="{Binding StreamList, Source={StaticResource dObj}}" IsEnabled="{Binding EnableStream, Source={StaticResource dObj}}" SelectedIndex="{Binding ClassSelectedIndex, Source={StaticResource dObj}, Mode=TwoWay}"></ComboBox>
                                    <Label Grid.Row="1" Margin="3,1,1,1">Subject Combo Code</Label>
                                    <ComboBox Grid.Row="1" Grid.Column="1" Margin="1" ItemsSource="{Binding FilteredComboCode, Source={StaticResource dObj}}" SelectedItem="{Binding SelectedComboCode, Source={StaticResource dObj}}"></ComboBox>
                                </Grid>
                               
                                <StackPanel Grid.Column="2" Background="#eee" Orientation="Vertical">
                                    <Label Margin="5">
                                        <TextBlock TextDecorations="Underline">Subjects</TextBlock></Label>
                                    <ListBox Margin="5,2,5,1" BorderThickness="0" FontSize="13" 
                                        ItemsSource="{Binding TakenSubjects, Source={StaticResource dObj}}">
                                    </ListBox>
                                </StackPanel>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Social">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                    <Grid Background="#eee">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="250"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Label Margin="1">Gender</Label>
                                        <StackPanel Margin="1" Orientation="Horizontal" Grid.Column="1">
                                            <RadioButton GroupName="Gen" VerticalAlignment="Center" IsChecked="{Binding TxbGen, Source={StaticResource dObj}, Mode=TwoWay, ConverterParameter=M, Converter={StaticResource GenConverter}}">Boy</RadioButton>
                                            <RadioButton GroupName="Gen" Margin="20,0,0,0" VerticalAlignment="Center" IsChecked="{Binding TxbGen, Source={StaticResource dObj}, Mode=TwoWay, ConverterParameter=F, Converter={StaticResource GenConverter}}">Girl</RadioButton>
                                        </StackPanel>
                                        <Label Grid.Row="1" Margin="1">DoB</Label>
                                        <DatePicker Margin="1" Grid.Row="1" Grid.Column="1"
                                            Text="{Binding Dob, Source={StaticResource dObj}, Mode=TwoWay, Converter={StaticResource DateConverter}}">
                                        </DatePicker>
                                       
                                        <Label Grid.Row="2" Margin="1">Blood group</Label>
                                        <ComboBox Grid.Row="2" Grid.Column="1" Margin="1"
                                            ItemsSource="{Binding BloodGroups, Source={StaticResource dObj}}" 
                                            SelectedItem="{Binding BloodGrp, Source={StaticResource dObj}}">
                                        </ComboBox>
                                      
                                       
                                        <Label Grid.Row="3" Margin="1">PH</Label>
                                        <StackPanel Margin="1" Orientation="Horizontal" Grid.Row="3" Grid.Column="1">
                                            <RadioButton GroupName="ph" IsChecked="{Binding TxbIsPh, Source={StaticResource dObj}, Mode=TwoWay, ConverterParameter=no, Converter={StaticResource YesNoConverter}}">No</RadioButton>
                                            <RadioButton GroupName="ph" IsChecked="{Binding TxbIsPh, Source={StaticResource dObj}, Mode=TwoWay, ConverterParameter=yes, Converter={StaticResource YesNoConverter}}">Yes</RadioButton>
                                        </StackPanel>
                                        <Label Grid.Row="4" Margin="1">PH detail</Label>
                                        <TextBox Grid.Row="4" Grid.Column="1" Margin="1"
                                            Text="{Binding TxbPhType, Source={StaticResource dObj}, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding EnablePhTxb, Source={StaticResource dObj}}">
                                        </TextBox>
                                   
                                    </Grid>
                                <Grid Grid.Column="1" Background="#eee">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="250"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Label Margin="1">Aadhar No.</Label>
                                    <TextBox Grid.Column="1" Margin="1" Text="{Binding TxbAadhar, Source={StaticResource dObj}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                    <Label Grid.Row="1" Margin="1">Religion</Label>
                                    <TextBox Grid.Row="1" Grid.Column="1" Margin="1" Text="{Binding TxbReligion, Source={StaticResource dObj}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                    </TextBox>
                                    <Label Grid.Row="2" Margin="1">Social category</Label>
                                    <ComboBox Grid.Row="2" Grid.Column="1" Margin="1"
                                            ItemsSource="{Binding SocialCatList, Source={StaticResource dObj}}" 
                                            SelectedItem="{Binding TxbSocCat, Source={StaticResource dObj}}">
                                    </ComboBox>
                                    <Label Grid.Row="3" Margin="1">Social Sub Cat</Label>
                                    <TextBox Grid.Row="3" Grid.Column="1" Margin="1"
                                            Text="{Binding TxbSbCat, Source={StaticResource dObj}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                    </TextBox>
                                    <Label Grid.Row="4" Margin="1">BPL</Label>
                                    <StackPanel Orientation="Horizontal" Margin="1" Grid.Row="4" Grid.Column="1">
                                        <RadioButton GroupName="bpl" IsChecked="{Binding TxbIsBpl, Source={StaticResource dObj}, Mode=TwoWay, ConverterParameter=no, Converter={StaticResource YesNoConverter}}">No</RadioButton>
                                        <RadioButton GroupName="bpl" IsChecked="{Binding TxbIsBpl, Source={StaticResource dObj}, Mode=TwoWay, ConverterParameter=yes, Converter={StaticResource YesNoConverter}}">Yes</RadioButton>
                                    </StackPanel>
                                    <Label Grid.Row="5" Margin="1">BPL No.</Label>
                                    <TextBox Grid.Row="5" Grid.Column="1" Margin="1" 
                                            IsEnabled="{Binding EnableBplTxb, Source={StaticResource dObj}}" Text="{Binding TxbBplNo, Source={StaticResource dObj}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                    </TextBox>
                                </Grid>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Parents">
                            <Grid Background="#eee">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="250" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Label Margin="1">Father Name</Label>
                                    <TextBox Margin="1" Grid.Column="1" Text="{Binding TxbFather, Source={StaticResource dObj}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                    <Label Margin="1" Grid.Row="1" Grid.Column="0">Mother Name</Label>
                                    <TextBox Margin="1" Grid.Row="1" Grid.Column="1" Text="{Binding TxbMother, Source={StaticResource dObj}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                    <Label Margin="1" Grid.Row="2" Grid.Column="0">Guardian Name</Label>
                                    <TextBox Margin="1" Grid.Row="2" Grid.Column="1" Text="{Binding TxbGrd, Source={StaticResource dObj}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                    <Label Margin="1" Grid.Row="3" Grid.Column="0">Relation with guardian</Label>
                                    <TextBox Margin="1" Grid.Row="3" Grid.Column="1" Text="{Binding TxbGrdRel, Source={StaticResource dObj}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                </Grid>
                                <Grid Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="250"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Label Margin="1">Father / Guardian occupation</Label>
                                    <TextBox Margin="1" Grid.Column="1" Text="{Binding TxbGrdOcc, Source={StaticResource dObj}, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                    <Label Margin="1" Grid.Row="1">Father / Guardian EPIC (Voter) No.</Label>
                                    <TextBox Margin="1" Grid.Row="1" Grid.Column="1" Text="{Binding TxbGrdEpic, Source={StaticResource dObj}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                    <Label Margin="1" Grid.Row="2">Father / Guardian Aadhar No.</Label>
                                    <TextBox Margin="1" Grid.Row="2" Grid.Column="1" Text="{Binding TxbGrdAadhar, Source={StaticResource dObj}, Mode=TwoWay}"></TextBox>
                                </Grid>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Address &amp; Contact">
                            <Grid Background="#eee">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <StackPanel Orientation="Vertical" Margin="5">
                                    <Label>
                                        <TextBlock TextDecorations="Underline">Present Address</TextBlock>
                                    </Label>
                                    <CheckBox Visibility="Hidden">Same as present address</CheckBox>
                                    <TextBox Text="{Binding PresentAddr, Source={StaticResource dObj}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="80" AcceptsReturn="True" TextWrapping="Wrap"></TextBox>
                                </StackPanel>
                                <StackPanel Margin="5" Grid.Column="1" Orientation="Vertical">
                                    <Label>
                                        <TextBlock TextDecorations="Underline">Permanent Address</TextBlock>
                                    </Label>
                                    <CheckBox IsChecked="{Binding Same2Address, Source={StaticResource dObj}, Mode=TwoWay}">Same as present address</CheckBox>
                                    <TextBox Text="{Binding PermanentAddr, Source={StaticResource dObj}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="80" AcceptsReturn="True" TextWrapping="Wrap"></TextBox>
                                </StackPanel>
                                <Grid Grid.Column="2" Margin="5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.ColumnSpan="2">
                                        <TextBlock TextDecorations="Underline">Contact Info</TextBlock>
                                    </Label>
                                    <Label Grid.Row="1" Margin="1">Student Mobile No.</Label>
                                    <TextBox Margin="1" Grid.Row="1" Grid.Column="1" Text="{Binding TxbMobile, Source={StaticResource dObj}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                    <Label Margin="1" Grid.Row="2">Guardian's Mobile No.</Label>
                                    <TextBox Margin="1" Grid.Row="2" Grid.Column="1" Text="{Binding GrdMobile, Source={StaticResource dObj}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                    <Label Margin="1" Grid.Row="3">Email ID</Label>
                                    <TextBox Margin="1" Grid.Row="3" Grid.Column="1" Text="{Binding TxbEmail, Source={StaticResource dObj}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                </Grid>
                            </Grid>

                        </TabItem>
                        <TabItem Header="Admission">
                            <Grid Background="#eee">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="250"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Margin="1" Grid.ColumnSpan="2">
                                        <TextBlock TextDecorations="Underline">Admission info</TextBlock>
                                    </Label>
                                    <Label Margin="1" Grid.Row="1">Admission No.</Label>
                                    <TextBox Margin="1" Grid.Row="1" Grid.Column="1" Text="{Binding AdmissionNo, Source={StaticResource dObj}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                    <Label Grid.Row="2" Margin="1">Admissin Date</Label>
                                    <DatePicker Grid.Row="2" Grid.Column="1" Margin="1" Width="150" HorizontalAlignment="Left" Text="{Binding AdmissionDate, Source={StaticResource dObj}, Converter={StaticResource DateConverter}, Mode=TwoWay}"></DatePicker>
                                    <Label Grid.Row="3" Margin="1">Admitted Class</Label>
                                    <ComboBox Grid.Row="3" Grid.Column="1" Margin="1" Width="80" HorizontalAlignment="Left" ItemsSource="{Binding ClassesForAdmission, Source={StaticResource dObj}}" SelectedItem="{Binding AdmittedClass, Source={StaticResource dObj}}"></ComboBox>
                                </Grid>
                                <Grid Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.ColumnSpan="2">
                                        <TextBlock TextDecorations="Underline">Last School Info</TextBlock>
                                    </Label>
                                    <Label Grid.Row="1" Margin="1">Last School Name</Label>
                                    <TextBox Grid.Row="1" Grid.Column="1" Margin="1" Text="{Binding LastSchool, Source={StaticResource dObj}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                    <Label Grid.Row="2" Margin="1">Year of passing of last class</Label>
                                    <ComboBox Grid.Column="1" Margin="1" Width="80" HorizontalAlignment="Left" Grid.Row="2" ItemsSource="{Binding YearOfPassingArray, Source={StaticResource dObj}}" SelectedIndex="{Binding IndexOfLastClassYear, Source={StaticResource dObj}}"></ComboBox>
                                    <Label Grid.Row="3">TC details</Label>
                                    <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Tc, Source={StaticResource dObj}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                    <Label Grid.Row="4">Date of leaving</Label>
                                    <DatePicker Grid.Row="4" Grid.Column="1" Width="150" HorizontalAlignment="Left"  Text="{Binding DateOfLeaving, Source={StaticResource dObj}, Converter={StaticResource DateConverter}}"></DatePicker>
                                </Grid>
                                <StackPanel Grid.Column="1" Orientation="Vertical">
                                   
                                    
                                </StackPanel>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Bank">
                            <Grid Background="#eee">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="250"/>   
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                               
                                <Label Grid.Row="0" Margin="1">Account No.</Label>
                                <Label Grid.Row="1" Margin="1">Bank Name</Label>
                                <Label Grid.Row="2" Margin="1">Branch Name</Label>   
                                <Label Grid.Row="3" Margin="1">Branch IFSC code</Label>
                                <Label Grid.Row="4" Margin="1">Bank MICR code</Label>
                                <TextBox Grid.Row="0" Grid.Column="1" Margin="1" Text="{Binding BankAcc, Source={StaticResource dObj}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                <TextBox Grid.Row="1" Grid.Column="1" Margin="1" Text="{Binding BankName, Source={StaticResource dObj}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                <TextBox Grid.Row="2" Grid.Column="1" Margin="1" Text="{Binding BankBranch, Source={StaticResource dObj}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                <TextBox Grid.Row="3" Grid.Column="1" Margin="1" Text="{Binding BankIfsc, Source={StaticResource dObj}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                <TextBox Grid.Row="4" Grid.Column="1" Margin="1" Text="{Binding BankMicr, Source={StaticResource dObj}, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Other">
                     
                                <Grid Background="#eee">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="250" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Label Margin="1">Board No.</Label>
                                    <TextBox Margin="1" Grid.Row="0" Grid.Column="1"
                                     Text="{Binding TxbMadhyamicNo, Source={StaticResource dObj}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" >
                                    </TextBox>
                                    <Label Margin="1" Grid.Row="1">Board Roll No.</Label>
                                    <TextBox Margin="1" Grid.Row="1" Grid.Column="1"
                                     Text="{Binding TxbMadhyamicRoll, Source={StaticResource dObj}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" >
                                    </TextBox>
                                    <Label Margin="1" Grid.Row="2">Council No.</Label>
                                    <TextBox Margin="1" Grid.Row="2" Grid.Column="1"
                                     Text="{Binding TxbCouncilNo, Source={StaticResource dObj}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" >
                                    </TextBox>
                                    <Label Grid.Row="3" Margin="1">Council Roll No.</Label>
                                    <TextBox Grid.Row="3" Grid.Column="1" Margin="1"
                                     Text="{Binding TxbCouncilRoll, Source={StaticResource dObj}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" >
                                    </TextBox>
                                </Grid>
                            
                        </TabItem>
                    </TabControl>
                </ScrollViewer>
             
            </Grid>
            
        </Border>
        <!--Update or edit end-->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Border Style="{StaticResource SearchBorder}">
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <Label>Search by :</Label>
                                <RadioButton GroupName="search" Style="{StaticResource searchRadio}"
                                    IsChecked="{Binding SearchCategory, Source={StaticResource dObj}, Converter={StaticResource SearchConverter}, ConverterParameter=name}" >
                                    Student's Name
                                </RadioButton>
                                <RadioButton GroupName="search" Style="{StaticResource searchRadio}"
                                    IsChecked="{Binding SearchCategory, Source={StaticResource dObj}, Converter={StaticResource SearchConverter}, ConverterParameter=cls}" >
                                    Class info
                                </RadioButton>
                                <RadioButton GroupName="search" Style="{StaticResource searchRadio}"
                                    IsChecked="{Binding SearchCategory, Source={StaticResource dObj}, Converter={StaticResource SearchConverter}, ConverterParameter=clsName}" >
