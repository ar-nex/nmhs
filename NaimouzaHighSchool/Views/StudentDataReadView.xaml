                            <Label Grid.Row="1" Style="{StaticResource lblProperty}">Admission Date</Label>
                            <Label Grid.Row="1" Grid.Column="1" Content="{Binding AdmissionDate, Source={StaticResource dObj}, Mode=OneWay}" Style="{StaticResource lblValue}" Foreground="{Binding AdmissionDateColor, Source={StaticResource dObj}}"></Label>
                            <Label Grid.Row="2" Style="{StaticResource lblProperty}">Admitted in Class</Label>
                            <Label Grid.Row="2" Grid.Column="1" Content="{Binding AdmittedClass, Source={StaticResource dObj}, Mode=OneWay}" Style="{StaticResource lblValue}" Foreground="{Binding AdmittedClassColor, Source={StaticResource dObj}}"></Label>
