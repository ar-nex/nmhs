                            <Label Grid.Row="4" Style="{StaticResource lblProperty}">Subjects</Label>
                            <Label Grid.Row="4" Grid.Column="1" Style="{StaticResource doubleDot}"> : </Label>
                            <ListBox Grid.Row="4" Grid.Column="2" ItemsSource="{Binding TakenSubjects, Source={StaticResource dObj}}" Background="#313b55" Foreground="White" BorderBrush="Black">
                                
                            </ListBox>
                            
                            <Label Grid.Row="1" Grid.Column="3" Style="{StaticResource lblProperty}">Gender</Label>
                            <Label Grid.Row="1" Grid.Column="4" Style="{StaticResource doubleDot}"> : </Label>
                            <Label Grid.Row="1" Grid.Column="5" Content="{Binding TxbGen, Source={StaticResource dObj}, Mode=OneWay}" Style="{StaticResource lblValue}" Foreground="{Binding TxbGenColor, Source={StaticResource dObj}}"></Label>
                            <Label Grid.Row="2" Grid.Column="3" Style="{StaticResource lblProperty}">DoB</Label>
                            <Label Grid.Row="2" Grid.Column="4" Style="{StaticResource doubleDot}"> : </Label>
                            <Label Grid.Row="2" Grid.Column="5" Content="{Binding TxbDob, Source={StaticResource dObj}, Mode=OneWay}" Style="{StaticResource lblValue}" Foreground="{Binding TxbDobColor, Source={StaticResource dObj}}"></Label>
                            <Label Grid.Row="3" Grid.Column="3" Style="{StaticResource lblProperty}">Age</Label>
                            <Label Grid.Row="3" Grid.Column="4" Style="{StaticResource doubleDot}"> : </Label>
                            <Label Grid.Row="3" Grid.Column="5" Content="{Binding TxbAge, Source={StaticResource dObj}, Mode=OneWay}" Style="{StaticResource lblValue}"  Foreground="{Binding TxbAgeColor, Source={StaticResource dObj}}"></Label>
                        </Grid>

                        <Border Grid.Row="2">
                            <!--<Label FontSize="20" Foreground="YellowGreen">Personal</Label>-->
                            <TextBlock Style="{StaticResource groupHeader}">Personal</TextBlock>
                        </Border>
                        <Grid Grid.Row="3" Margin="10,3,3,3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>

                            </Grid.RowDefinitions>
                            <Label Grid.Row="0" Grid.Column="0" Style="{StaticResource lblProperty}">Father Name :</Label>
                            <Label Grid.Row="0" Grid.Column="1" Content="{Binding TxbFather, Source={StaticResource dObj}, Mode=OneWay}" Style="{StaticResource lblValue}" Foreground="{Binding TxbFatherColor, Source={StaticResource dObj}}"></Label>
                            <Label Grid.Row="1" Grid.Column="0" Style="{StaticResource lblProperty}">Mother Name :</Label>
                            <Label Grid.Row="1" Grid.Column="1" Content="{Binding TxbMother, Source={StaticResource dObj}, Mode=OneWay}" Style="{StaticResource lblValue}" Foreground="{Binding TxbMotherColor, Source={StaticResource dObj}}"></Label>
                            <Label Grid.Row="2" Grid.Column="0" Style="{StaticResource lblProperty}">Guardian Name :</Label>
                            <Label Grid.Row="2" Grid.Column="1" Content="{Binding TxbGrd, Source={StaticResource dObj}, Mode=OneWay}" Style="{StaticResource lblValue}" Foreground="{Binding TxbGrdColor, Source={StaticResource dObj}}"></Label>
                            <Label Grid.Row="3" Grid.Column="0" Style="{StaticResource lblProperty}">Relation with Guardian :</Label>
                            <Label Grid.Row="3" Grid.Column="1" Content="{Binding TxbGrdRel, Source={StaticResource dObj}, Mode=OneWay}" Style="{StaticResource lblValue}" Foreground="{Binding TxbGrdRelColor, Source={StaticResource dObj}}"></Label>
                            <Label Grid.Row="4" Grid.Column="0" Style="{StaticResource lblProperty}">Father (or Guardian) Aadhar :</Label>
                            <Label Grid.Row="4" Grid.Column="1" Content="{Binding TxbGrdAadhar, Source={StaticResource dObj}, Mode=OneWay}" Style="{StaticResource lblValue}" Foreground="{Binding TxbGrdAadharColor, Source={StaticResource dObj}}"></Label>
                            <Label Grid.Row="5" Grid.Column="0" Style="{StaticResource lblProperty}">Father (or Guardian) Epic :</Label>
                            <Label Grid.Row="5" Grid.Column="1" Content="{Binding TxbGrdEpic, Source={StaticResource dObj}, Mode=OneWay}" Style="{StaticResource lblValue}" Foreground="{Binding TxbGrdEpicColor, Source={StaticResource dObj}}"></Label>
                            <Label Grid.Row="6" Grid.Column="0" Style="{StaticResource lblProperty}">Father (or Guardian) Occupation :</Label>
                            <Label Grid.Row="6" Grid.Column="1" Content="{Binding TxbGrdOcc, Source={StaticResource dObj}, Mode=OneWay}" Style="{StaticResource lblValue}" Foreground="{Binding TxbGrdOccColor, Source={StaticResource dObj}}"></Label>

                            <Label Grid.Row="0" Grid.Column="2" Style="{StaticResource lblProperty}">Student's Aadhar :</Label>
                            <Label Grid.Row="0" Grid.Column="3" Content="{Binding TxbAadhar, Source={StaticResource dObj}, Mode=OneWay}" Style="{StaticResource lblValue}" Foreground="{Binding TxbAadharColor, Source={StaticResource dObj}}"></Label>
                            <Label Grid.Row="1" Grid.Column="2" Style="{StaticResource lblProperty}">Social Category :</Label>
                            <Label Grid.Row="1" Grid.Column="3" Content="{Binding TxbSocCat, Source={StaticResource dObj}, Mode=OneWay}" Style="{StaticResource lblValue}" Foreground="{Binding TxbSocCatColor, Source={StaticResource dObj}}"></Label>
                            <Label Grid.Row="2" Grid.Column="2" Style="{StaticResource lblProperty}">Sub Category :</Label>
                            <Label Grid.Row="2" Grid.Column="3" Content="{Binding TxbSbCat, Source={StaticResource dObj}, Mode=OneWay}" Style="{StaticResource lblValue}" Foreground="{Binding TxbSbCatColor, Source={StaticResource dObj}}"></Label>
                            <Label Grid.Row="3" Grid.Column="2" Style="{StaticResource lblProperty}">Is PH :</Label>
                            <Label Grid.Row="3" Grid.Column="3" Content="{Binding TxbIsPh, Source={StaticResource dObj}, Mode=OneWay}" Style="{StaticResource lblValue}" Foreground="{Binding TxbIsPhColor, Source={StaticResource dObj}}"></Label>
                            <Label Grid.Row="4" Grid.Column="2" Style="{StaticResource lblProperty}">PH Detail :</Label>
                            <Label Grid.Row="4" Grid.Column="3" Content="{Binding TxbPhType, Source={StaticResource dObj}, Mode=OneWay}" Style="{StaticResource lblValue}" Foreground="{Binding TxbPhTypeColor, Source={StaticResource dObj}}"></Label>
                            <Label Grid.Row="5" Grid.Column="2" Style="{StaticResource lblProperty}">Is BPL :</Label>
                            <Label Grid.Row="5" Grid.Column="3" Content="{Binding TxbIsBpl, Source={StaticResource dObj}, Mode=OneWay}" Style="{StaticResource lblValue}" Foreground="{Binding TxbIsBplColor, Source={StaticResource dObj}}"></Label>
