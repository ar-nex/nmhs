            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="TemBorder" Property="Background" Value="Red" />
                    <Setter TargetName="TemBorder" Property="BorderBrush" Value="Red" />
                    <Setter TargetName="TemBorder" Property="TextBlock.Foreground" Value="Black" />
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter TargetName="TemBorder" Property="Background" Value="#FFB0B2B2" />
                    <Setter TargetName="TemBorder" Property="TextBlock.Foreground" Value="white" />
                </Trigger>
            </ControlTemplate.Triggers>
