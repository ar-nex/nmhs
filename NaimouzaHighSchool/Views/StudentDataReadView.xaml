                            <Label Grid.Row="2" Style="{StaticResource lblProperty}">Section</Label>
                            <Label Grid.Row="2" Grid.Column="1" Style="{StaticResource doubleDot}"> : </Label>
                            <Label Grid.Row="2" Grid.Column="2" Content="{Binding TxbSection, Source={StaticResource dObj}, Mode=OneWay}" Style="{StaticResource lblValue}" Foreground="{Binding TxbSectionColor, Source={StaticResource dObj}}"></Label>
             
                            <Label Grid.Row="3" Style="{StaticResource lblProperty}">Roll</Label>
                            <Label Grid.Row="3" Grid.Column="1" Style="{StaticResource doubleDot}"> : </Label>
