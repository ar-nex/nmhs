                            <Label Grid.Row="6" Grid.Column="3" Content="{Binding TxbBplNo, Source={StaticResource dObj}, Mode=OneWay}" Style="{StaticResource lblValue}" Foreground="{Binding TxbBplNoColor, Source={StaticResource dObj}}"></Label>
                            <Label Grid.Row="7" Grid.Column="2" Style="{StaticResource lblProperty}">Religion :</Label>
                            <Label Grid.Row="7" Grid.Column="3" Content="{Binding TxbReligion, Source={StaticResource dObj}, Mode=OneWay}" Style="{StaticResource lblValue}" Foreground="{Binding TxbReligionColor, Source={StaticResource dObj}}"></Label>
                        </Grid>

                        <Border Grid.Row="4">
                            <TextBlock Style="{StaticResource groupHeader}">Address &amp; Contact</TextBlock>
                        </Border>
                        <Grid Grid.Row="5" Margin="10,3,3,3">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Label Style="{StaticResource lblProperty}">Present Address :</Label>
                            <TextBox Grid.Row="1" Text="{Binding PresentAddr, Source={StaticResource dObj}, Mode=OneWay}" Background="#313b55" BorderThickness="0" Foreground="{Binding PermanentAddrColor, Source={StaticResource dObj}}"
                                     Height="80" Width="250" HorizontalAlignment="Left" IsReadOnly="True" AcceptsReturn="True" TextWrapping="Wrap"></TextBox>
                            <Label Grid.Column="1" Style="{StaticResource lblProperty}">Permanent Address :</Label>
                            <TextBox Grid.Row="1" Grid.Column="1" Background="#313b55" BorderThickness="0" Foreground="{Binding PermanentAddrColor, Source={StaticResource dObj}}"
                                     Text="{Binding PermanentAddr, Source={StaticResource dObj}, Mode=OneWay}" 
                                     Height="80" Width="250" HorizontalAlignment="Left" IsReadOnly="True" AcceptsReturn="True" TextWrapping="Wrap"></TextBox>
                            <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.ColumnSpan="2">
                                <Label Style="{StaticResource lblProperty}">Mobile No. :</Label>
                                <Label Content="{Binding TxbMobile, Source={StaticResource dObj}}" Style="{StaticResource lblValue}" Foreground="{Binding TxbMobileColor, Source={StaticResource dObj}}"></Label>
                                <Label Style="{StaticResource lblProperty}">Email Id :</Label>
                                <Label Content="{Binding TxbEmail, Source={StaticResource dObj}}" Style="{StaticResource lblValue}" Foreground="{Binding TxbEmailColor, Source={StaticResource dObj}}"></Label>
                            </StackPanel>
                        </Grid>

                        <Border Grid.Row="6">
                            <TextBlock Style="{StaticResource groupHeader}">Bank</TextBlock>
                        </Border>
                        <Grid Grid.Row="7" Margin="10,3,3,3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Label Style="{StaticResource lblProperty}">Bank Account No. :</Label>
                            <Label Grid.Row="0" Grid.Column="1" Content="{Binding BankAcc, Source={StaticResource dObj}, Mode=OneWay}" Style="{StaticResource lblValue}" Foreground="{Binding BankAccColor, Source={StaticResource dObj}}"></Label>
                            <Label Grid.Row="1" Style="{StaticResource lblProperty}">Bank Name :</Label>
                            <Label Grid.Row="1" Grid.Column="1" Content="{Binding BankName, Source={StaticResource dObj}, Mode=OneWay}" Style="{StaticResource lblValue}" Foreground="{Binding BankNameColor, Source={StaticResource dObj}}"></Label>
                            <Label Grid.Row="2" Style="{StaticResource lblProperty}">Branch :</Label>
                            <Label Grid.Row="2" Grid.Column="1" Content="{Binding BankBranch, Source={StaticResource dObj}, Mode=OneWay}" Style="{StaticResource lblValue}" Foreground="{Binding BankBranchColor, Source={StaticResource dObj}}"></Label>
                            <Label Grid.Row="3" Style="{StaticResource lblProperty}">IFSC :</Label>
                            <Label Grid.Row="3" Grid.Column="1" Content="{Binding BankIfsc, Source={StaticResource dObj}, Mode=OneWay}" Style="{StaticResource lblValue}" Foreground="{Binding BankIfscColor, Source={StaticResource dObj}}"></Label>
                            <Label Grid.Row="4" Style="{StaticResource lblProperty}">MICR</Label>
                            <Label Grid.Row="4" Grid.Column="1" Content="{Binding BankMicr, Source={StaticResource dObj}, Mode=OneWay}" Style="{StaticResource lblValue}" Foreground="{Binding BankMicrColor, Source={StaticResource dObj}}"></Label>
                        </Grid>

                        <Border Grid.Row="8">
                            <TextBlock Style="{StaticResource groupHeader}">Admission</TextBlock>
                        </Border>
                        <Grid Grid.Row="9" Margin="10,3,3,3">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Row="0" Style="{StaticResource lblProperty}">Admission No.</Label>
