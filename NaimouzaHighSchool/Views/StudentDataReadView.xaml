                                                            />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Button.Triggers>
                                </Button>
                                <Button Command="{Binding DeleteCommand, Source={StaticResource dObj}}" Style="{StaticResource searchbarButton}">Delete</Button>
                            </StackPanel>
                        </StackPanel>
            </Border>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*" MaxWidth="350"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Border Background="#181a2e">
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <Label Foreground="#bbb">Filter by :</Label>
                                <RadioButton GroupName="filter" Style="{StaticResource filterRadio}"
                                    IsChecked="{Binding FilterCategory, Source={StaticResource dObj}, Converter={StaticResource GenFilterConverter}, ConverterParameter=none}" >
                                    None
                                </RadioButton>
                                <RadioButton GroupName="filter" Style="{StaticResource filterRadio}"
                                    IsChecked="{Binding FilterCategory, Source={StaticResource dObj}, Converter={StaticResource GenFilterConverter}, ConverterParameter=male}" >
                                    Boys
                                </RadioButton>
                                <RadioButton GroupName="filter" Style="{StaticResource filterRadio}"
                                    IsChecked="{Binding FilterCategory, Source={StaticResource dObj}, Converter={StaticResource GenFilterConverter}, ConverterParameter=female}" >
                                    Girls
                                </RadioButton>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Foreground="#bbb" VerticalAlignment="Center">Student(s) Found :</Label>
                                <Label Foreground="#bbb" FontSize="20" FontWeight="Black"  Content="{Binding NumberOfMatches, Source={StaticResource dObj}}"></Label>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1">
